{
  "name": "leabox",
  "version": "1.0.0",
  "description": "Port of the popular Toniebox",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf ./dist",
    "check": "standard **/*.js",
    "start-original": "webpack-dev-server --port 9000 --inline --progress --profile --colors --watch --content-base src/ --mode development",
    "watch": "clear && webpack --watch --config webpack.config.js --mode development",
    "start": "clear && node ./dist/main.bundle.js",
    "build": "npm run-script clean && webpack --config webpack.config.js --mode production",
    "build.prod": "webpack --config webpack.config.js -p",
    "build.esnext": "npm run build:types && npm run build:js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir dist --extensions \".ts,.tsx\" --source-maps inline",
    "build.all": "npm run build.prod && npm run build.esnext",
    "test": "karma start karma.config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jfuerlinger/leabox.git"
  },
  "keywords": [
    "raspberry",
    "rfid",
    "node",
    "diy"
  ],
  "author": "Josef FÃ¼rlinger",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jfuerlinger/leabox/issues"
  },
  "homepage": "https://github.com/jfuerlinger/leabox#readme",
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.0.20",
    "@isolution/youtube-audio-stream": "^1.3.0",
    "chalk": "^2.4.2",
    "child_process": "^1.0.2",
    "db": "^1.1.1",
    "fluent-ffmpeg": "^2.1.2",
    "fluent-ffmpeg-corrected": "^1.0.0",
    "graceful-fs": "^4.2.3",
    "lame": "^1.2.4",
    "lowdb": "^1.0.0",
    "mfrc522-rpi": "^2.0.0",
    "node-gyp": "^6.0.0",
    "node-lame": "^1.2.0",
    "readline": "^1.3.0",
    "rxjs": "^6.5.3",
    "shallow-equal": "^1.2.0",
    "shortid": "^2.2.15",
    "speaker": "^0.4.2",
    "timers-browserify": "^2.0.11",
    "utf8-string-bytes": "^1.0.3",
    "youtube-audio-stream": "^0.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.4.0",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.0",
    "@babel/preset-env": "^7.4.1",
    "@babel/preset-typescript": "^7.3.3",
    "@types/clear": "^0.1.0",
    "@types/fluent-ffmpeg": "^2.1.11",
    "@types/jasmine": "2.8.7",
    "@types/node": "7.0.0",
    "@types/shortid": "0.0.29",
    "awesome-typescript-loader": "5.2.0",
    "clear": "^0.1.0",
    "jasmine-core": "3.1.0",
    "karma": "2.0.4",
    "karma-jasmine": "1.1.2",
    "karma-webpack": "3.0.0",
    "rimraf": "^3.0.0",
    "source-map-loader": "0.2.3",
    "tslint": "5.17.0",
    "tslint-loader": "3.6.0",
    "typescript": "3.5.1",
    "webpack": "4.12.0",
    "webpack-cli": "3.0.8",
    "webpack-dev-server": "3.1.4"
  }
}
